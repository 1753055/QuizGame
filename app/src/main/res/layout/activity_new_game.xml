<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background"

    app:layout_behavior="@string/appbar_scrolling_view_behavior">



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >

        <Button
            android:id="@+id/soundng"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/setting_button"
            android:layout_gravity="right|top"
            />


        <ImageView android:src="@drawable/firebase_icon"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginBottom="24dp"
            android:layout_gravity="center_horizontal" />




    </LinearLayout>
    <TextView
        android:id="@+id/textView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_above="@id/spinner"
        android:text="Create your new game"
        android:textColor="@color/lightpink"
        android:layout_marginBottom="50dp"
        android:textSize="36sp" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="100dp"
        android:background="@drawable/firebase_button"
        android:fontFamily="@font/bubblebobble"
        android:layout_centerInParent="true" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinner"
        android:layout_centerInParent="true"
        android:layout_marginTop="55dp"
        android:layout_marginRight="100dp"
        android:background="@drawable/firebase_button"
        android:fontFamily="@font/bubblebobble" />

    <Button
        android:id="@+id/oknewgame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinner2"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/firebase_button"
        android:fontFamily="@font/bubblebobble"
        android:text="@android:string/ok"

        android:textSize="24sp" />


</RelativeLayout>